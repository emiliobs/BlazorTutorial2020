@page "/editemployee/{id}"

@inherits EditEmployeeBase

    <EditForm Model="Employee">
        <DataAnnotationsValidator></DataAnnotationsValidator>
        <h3>Edit Employee</h3>
        <hr />
        @*<ValidationSummary></ValidationSummary>*@
        <div class="form-group row">
            <label for="firstName" class="col-sm-2 col-form-label">
                First Name
            </label>
            <div class="col-sm-10">
                <InputText id="firstName" class="form-control" placeholder="First Name"
                           @bind-Value="Employee.FirstName" />
                <ValidationMessage For="@(() => Employee.FirstName)"></ValidationMessage>
            </div>
        </div>
        <div class="form-group row">
            <label for="lastName" class="col-sm-2 col-form-label">
                Last Name
            </label>
            <div class="col-sm-10">
                <InputText id="lastName" class="form-control" placeholder="Last Name"
                           @bind-Value="Employee.LastName" />
                <ValidationMessage For="@(() => Employee.LastName)"></ValidationMessage>
            </div>
        </div>
        <div class="form-group row">
            <label for="email" class="col-sm-2 col-form-label">
                Email
            </label>
            <div class="col-sm-10">
                <InputText id="email" class="form-control" placeholder="Email"
                           @bind-Value="Employee.Email" />
                <ValidationMessage For="@(() => Employee.Email)"></ValidationMessage>
            </div>
        </div>
        <div class="col-group row mb-3">
            <label for="department" class="col-sm-2 col-form-label">
                Department
            </label>
            <div class="col-sm-10">
                @*<InputSelect id="department" @bind-Value="DepartmentId" class="form-control">
                    @foreach (var department in Departments)
                    {
                        <option value="@department.DepartmentId">@department.DepartmentName</option>
                    }
                </InputSelect>*@
                @*InputSelect custom*@
                <CustomInputSelect id="department" @bind-Value="Employee.DepartmentId" class="form-control">
                    @foreach (var department in Departments)
                    {
                        <option value="@department.DepartmentId">@department.DepartmentName</option>
                    }
                </CustomInputSelect>
            </div>
        </div>

        <div class="col-group row mb-3">
            <label for="gender" class="col-sm-2 col-form-label">
                Gender
            </label>
            <div class="col-sm-10">
              
                <InputSelect id="gender" @bind-Value="Employee.Gender" class="form-control">
                    @foreach (var gender in Enum.GetValues(typeof(Gender)))
                    {
                        <option value="@gender">@gender</option>
                    }
                </InputSelect>
            </div>
        </div>
        <div class="form-group row">
            <label for="dateOfBirth" class="col-sm-2 col-form-label">
                Date of birth
            </label>
            <div class="col-sm-10">
                <InputDate @bind-Value="Employee.DateOfBirth" class="form-control"></InputDate>
                <ValidationMessage For="(() => Employee.DateOfBirth)"></ValidationMessage>
            </div>
        </div>

        


        <div class="form-group">
            <a href="#" class="btn btn-primary m-top-2">Save</a>
            <a href="/" class="btn btn-dark">Back</a>
        </div>
    </EditForm>