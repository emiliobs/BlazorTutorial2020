@page "/"
@inherits EmployeeListBase

<h3>Employee List</h3>

<div class="card-deck">
    @foreach (var employee in Employees)
    {
        <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
            <div class="card-header">
                <h3>@employee.FullName</h3>
            </div>
            <img class="card-img-top imagethumbnail"  src="@employee.PhotoPath"/>
            <div class="card-footer text-center">
                <a href="#" class="btn btn-primary" title="View"><i class="oi oi-people"></i></a>
                <a href="#" class="btn btn-info" title="Edit"><i class="oi oi-pencil"></i></a>
                <a href="#" class="btn btn-danger" title="Delete"><i class="oi oi-trash"></i></a>
            </div>
        </div>
    }
</div>
